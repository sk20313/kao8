    <script>
        // é¡µé¢å…ƒç´ 
        const fileInput = document.getElementById('fileInput');
        const uploadArea = document.getElementById('uploadArea');
        const imagePreview = document.getElementById('imagePreview');
        const imageContainer = document.getElementById('imageContainer');
        const calculateBtn = document.getElementById('calculateBtn');
        const resetBtn = document.getElementById('resetBtn');
        const resultBox = document.getElementById('resultBox');
        const initialMessage = document.getElementById('initialMessage');
        const interpretation = document.getElementById('interpretation');
        
        // ç»“æœå…ƒç´ 
        const upperRatio = document.getElementById('upperRatio');
        const middleRatio = document.getElementById('middleRatio');
        const lowerRatio = document.getElementById('lowerRatio');
        const imbalanceValue = document.getElementById('imbalanceValue');
        const goldenDeviation = document.getElementById('goldenDeviation');
        const upperBar = document.getElementById('upperBar');
        const middleBar = document.getElementById('middleBar');
        const lowerBar = document.getElementById('lowerBar');
        
        // æ ‡è®°ç‚¹æ•°ç»„
        const points = [];
        let currentImage = null;
        let originalWidth = 0;
        let originalHeight = 0;
        
        // ä¸Šä¼ åŒºåŸŸç‚¹å‡»äº‹ä»¶
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        // æ‹–æ”¾åŠŸèƒ½
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.background = 'rgba(50, 100, 180, 0.6)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.background = 'rgba(20, 40, 80, 0.4)';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.background = 'rgba(20, 40, 80, 0.4)';
            
            if (e.dataTransfer.files && e.dataTransfer.files[0]) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect();
            }
        });
        
        // æ–‡ä»¶é€‰æ‹©äº‹ä»¶
        fileInput.addEventListener('change', handleFileSelect);
        
        function handleFileSelect() {
            if (fileInput.files && fileInput.files[0]) {
                const file = fileInput.files[0];
                
                // æ£€æŸ¥æ–‡ä»¶ç±»å‹
                if (!file.type.match('image.*')) {
                    alert('è¯·ä¸Šä¼ å›¾ç‰‡æ–‡ä»¶');
                    return;
                }
                
                const reader = new FileReader();
                
                reader.onload = function(event) {
                    const img = new Image();
                    img.onload = function() {
                        // æ¸…é™¤ä¹‹å‰çš„æ ‡è®°ç‚¹
                        clearMarkers();
                        
                        // æ˜¾ç¤ºå›¾ç‰‡
                        imagePreview.src = event.target.result;
                        imagePreview.style.display = 'block';
                        
                        // ä¿å­˜åŸå§‹å°ºå¯¸
                        originalWidth = img.width;
                        originalHeight = img.height;
                        
                        // è°ƒæ•´é¢„è§ˆå¤§å°
                        const maxWidth = 600;
                        if (img.width > maxWidth) {
                            const scale = maxWidth / img.width;
                            imagePreview.width = maxWidth;
                            imagePreview.height = img.height * scale;
                        }
                        
                        currentImage = img;
                        calculateBtn.disabled = false;
                    };
                    img.src = event.target.result;
                };
                
                reader.readAsDataURL(file);
            }
        }
        
        // ç‚¹å‡»å›¾ç‰‡æ·»åŠ æ ‡è®°ç‚¹
        imagePreview.addEventListener('click', (e) => {
            if (!currentImage) return;
            
            // è·å–ç‚¹å‡»åæ ‡
            const rect = imagePreview.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            // æœ€å¤šåªèƒ½æ ‡è®°4ä¸ªç‚¹
            if (points.length >= 4) {
                alert('å·²ç»æ ‡è®°äº†4ä¸ªå…³é”®ç‚¹ï¼Œè¯·ç‚¹å‡»"é‡ç½®æ ‡è®°ç‚¹"é‡æ–°æ ‡è®°');
                return;
            }
            
            // æ·»åŠ æ ‡è®°ç‚¹
            const pointIndex = points.length;
            createMarker(x, y, pointIndex);
            
            // ä¿å­˜åæ ‡
            points.push({
                x: (x / imagePreview.width) * originalWidth,
                y: (y / imagePreview.height) * originalHeight
            });
            
            // å¦‚æœæœ‰4ä¸ªç‚¹ï¼Œå¯ä»¥è®¡ç®—æ¯”ä¾‹
            if (points.length === 4) {
                calculateBtn.disabled = false;
            }
        });
        
        // åˆ›å»ºæ ‡è®°ç‚¹
        function createMarker(x, y, index) {
            const labels = ['å‘é™…çº¿', 'çœ‰å¿ƒ', 'é¼»ä¸‹ç‚¹', 'ä¸‹å·´'];
            
            // åˆ›å»ºæ ‡è®°ç‚¹
            const marker = document.createElement('div');
            marker.className = 'point-marker';
            marker.style.left = `${x}px`;
            marker.style.top = `${y}px`;
            
            // åˆ›å»ºæ ‡ç­¾
            const label = document.createElement('div');
            label.className = 'point-label';
            label.textContent = `${index+1}. ${labels[index]}`;
            label.style.left = `${x}px`;
            label.style.top = `${y}px`;
            
            imageContainer.appendChild(marker);
            imageContainer.appendChild(label);
        }
        
        // æ¸…é™¤æ‰€æœ‰æ ‡è®°ç‚¹
        function clearMarkers() {
            // æ¸…é™¤æ‰€æœ‰æ ‡è®°
            const markers = document.querySelectorAll('.point-marker, .point-label');
            markers.forEach(marker => marker.remove());
            
            // æ¸…ç©ºåæ ‡æ•°ç»„
            points.length = 0;
        }
        
        // é‡ç½®æ ‡è®°ç‚¹
        resetBtn.addEventListener('click', () => {
            clearMarkers();
            calculateBtn.disabled = true;
        });
        
        // è®¡ç®—æ¯”ä¾‹
        calculateBtn.addEventListener('click', () => {
            if (points.length !== 4) {
                alert('è¯·æ ‡è®°4ä¸ªå…³é”®ç‚¹');
                return;
            }
            
            // è®¡ç®—ä¸‰åº­é•¿åº¦
            const upper = points[1].y - points[0].y;
            const middle = points[2].y - points[1].y;
            const lower = points[3].y - points[2].y;
            const total = upper + middle + lower;
            
            // è®¡ç®—æ¯”ä¾‹
            const pct_upper = Math.round(upper / total * 100);
            const pct_middle = Math.round(middle / total * 100);
            const pct_lower = Math.round(lower / total * 100);
            
            // è®¡ç®—å¤±è¡¡ç³»æ•°
            const imbalance = Math.round(
                (Math.max(upper, middle, lower) - Math.min(upper, middle, lower)) / 
                Math.max(upper, middle, lower) * 100
            );
            
            // é»„é‡‘æ¯”ä¾‹åå·®ï¼ˆç†æƒ³æ¯”ä¾‹33.3%ï¼‰
            const goldenDev = Math.round(
                (Math.abs(pct_upper - 33.3) + 
                 Math.abs(pct_middle - 33.3) + 
                 Math.abs(pct_lower - 33.3)) / 3
            );
            
            // æ›´æ–°UIæ˜¾ç¤ºç»“æœ
            upperRatio.textContent = `${pct_upper}%`;
            middleRatio.textContent = `${pct_middle}%`;
            lowerRatio.textContent = `${pct_lower}%`;
            imbalanceValue.textContent = `${imbalance}%`;
            goldenDeviation.textContent = `${goldenDev}%`;
            
            // è¿›åº¦æ¡åŠ¨ç”»
            setTimeout(() => {
                upperBar.style.width = `${pct_upper}%`;
                middleBar.style.width = `${pct_middle}%`;
                lowerBar.style.width = `${pct_lower}%`;
            }, 500);
            
            // æ˜¾ç¤ºç»“æœ
            resultBox.style.display = 'block';
            initialMessage.style.display = 'none';
            
            // æ›´æ–°é¢ç›¸è§£è¯»
            updateInterpretation(pct_upper, pct_middle, pct_lower);
        });
        
        // æ›´æ–°é¢ç›¸è§£è¯»
        function updateInterpretation(upper, middle, lower) {
            let interpretationHTML = '<h3>é¢ç›¸è§£è¯»</h3>';
            
            // ä¸Šåº­åˆ†æ
            if (upper > 37) {
                interpretationHTML += '<p><strong>ä¸Šåº­ï¼ˆé¢å¤´ï¼‰è¾ƒé•¿ï¼š</strong> è¡¨ç¤ºæ‚¨æœ‰è¾ƒå¼ºçš„æ™ºåŠ›å‘å±•å’Œæ—©å¹´è¿åŠ¿ã€‚é¢å¤´å®½å¹¿è±¡å¾æ€ç»´å¼€é˜”ï¼Œå–„äºè§„åˆ’ï¼Œæ—©å¹´ç”Ÿæ´»å¯èƒ½è¾ƒä¸ºé¡ºåˆ©ã€‚</p>';
            } else if (upper < 30) {
                interpretationHTML += '<p><strong>ä¸Šåº­ï¼ˆé¢å¤´ï¼‰è¾ƒçŸ­ï¼š</strong> ä»£è¡¨æ—©å¹´å‘å±•å¯èƒ½è¾ƒä¸ºè¾›è‹¦ï¼Œéœ€æ›´å¤šåŠªåŠ›ã€‚ä½†ä¸­æ™šå¹´è¿åŠ¿å¯èƒ½è¾ƒå¥½ï¼Œå±äºå¤§å™¨æ™šæˆçš„ç±»å‹ã€‚</p>';
            } else {
                interpretationHTML += '<p><strong>ä¸Šåº­æ¯”ä¾‹å‡è¡¡ï¼š</strong> è±¡å¾æ—©å¹´è¿åŠ¿å¹³ç¨³ï¼Œæ™ºåŠ›å‘å±•æ­£å¸¸ï¼Œæœ‰è‰¯å¥½çš„å­¦ä¹ èƒ½åŠ›å’Œæ€ç»´é€»è¾‘ã€‚</p>';
            }
            
            // ä¸­åº­åˆ†æ
            if (middle > 37) {
                interpretationHTML += '<p><strong>ä¸­åº­ï¼ˆçœ‰çœ¼é¼»ï¼‰è¾ƒé•¿ï¼š</strong> ä»£è¡¨æ‚¨æœ‰å¼ºçƒˆçš„äº‹ä¸šå¿ƒå’Œè´£ä»»æ„Ÿã€‚ä¸­å¹´æ—¶æœŸæ˜¯æ‚¨çš„äººç”Ÿé»„é‡‘æœŸï¼Œå¯èƒ½åœ¨äº‹ä¸šä¸Šæœ‰çªå‡ºè¡¨ç°ã€‚</p>';
            } else if (middle < 30) {
                interpretationHTML += '<p><strong>ä¸­åº­ï¼ˆçœ‰çœ¼é¼»ï¼‰è¾ƒçŸ­ï¼š</strong> è±¡å¾ä¸­å¹´è¿åŠ¿ç›¸å¯¹å¹³ç¨³ï¼Œå¯èƒ½æ›´æ³¨é‡å®¶åº­å’Œç”Ÿæ´»å¹³è¡¡ï¼Œè€Œéäº‹ä¸šæˆå°±ã€‚</p>';
            } else {
                interpretationHTML += '<p><strong>ä¸­åº­æ¯”ä¾‹å‡è¡¡ï¼š</strong> ä»£è¡¨ä¸­å¹´è¿åŠ¿ç¨³å®šï¼Œäº‹ä¸šå’Œç”Ÿæ´»èƒ½å¤Ÿå¹³è¡¡å‘å±•ï¼Œäººé™…å…³ç³»è‰¯å¥½ã€‚</p>';
            }
            
            // ä¸‹åº­åˆ†æ
            if (lower > 37) {
                interpretationHTML += '<p><strong>ä¸‹åº­ï¼ˆå£ä¸‹å·´ï¼‰è¾ƒé•¿ï¼š</strong> è±¡å¾æ™šå¹´è¿åŠ¿å¼ºç››ï¼Œæœ‰æŒä¹…çš„è€åŠ›å’Œæ‰§è¡ŒåŠ›ã€‚æ‚¨å¯èƒ½æ‹¥æœ‰åšå¼ºçš„æ„å¿—å’ŒæŒä¹…çš„è€åŠ›ã€‚</p>';
            } else if (lower < 30) {
                interpretationHTML += '<p><strong>ä¸‹åº­ï¼ˆå£ä¸‹å·´ï¼‰è¾ƒçŸ­ï¼š</strong> ä»£è¡¨è¡ŒåŠ¨åŠ›è¾ƒå¼ºä½†æŒä¹…åŠ›ç¨å¼±ã€‚æ™šå¹´ç”Ÿæ´»å¯èƒ½è¾ƒä¸ºç®€å•å¹³é™ã€‚</p>';
            } else {
                interpretationHTML += '<p><strong>ä¸‹åº­æ¯”ä¾‹å‡è¡¡ï¼š</strong> è±¡å¾æ™šå¹´ç”Ÿæ´»å¹³ç¨³ï¼Œäººé™…å…³ç³»å’Œè°ï¼Œèƒ½å¤Ÿäº«å—å¤©ä¼¦ä¹‹ä¹ã€‚</p>';
            }
            
            // ç»¼åˆè§£è¯»
            const deviation = Math.abs(upper - 33.3) + Math.abs(middle - 33.3) + Math.abs(lower - 33.3);
            if (deviation < 10) {
                interpretationHTML += '<p><strong>æ•´ä½“é¢ç›¸ï¼š</strong> ä¸‰åº­æ¯”ä¾‹éå¸¸å‡è¡¡ï¼Œè±¡å¾ä¸€ç”Ÿè¿åŠ¿å¹³ç¨³ï¼Œå„æ–¹é¢å‘å±•å‡è¡¡ï¼Œæ˜¯è¾ƒä¸ºç†æƒ³çš„é¢ç›¸æ ¼å±€ã€‚</p>';
            } else if (deviation < 20) {
                interpretationHTML += '<p><strong>æ•´ä½“é¢ç›¸ï¼š</strong> ä¸‰åº­æ¯”ä¾‹è¾ƒä¸ºå‡è¡¡ï¼Œäººç”Ÿè™½æœ‰èµ·ä¼ä½†æ•´ä½“è¿åŠ¿å¹³ç¨³ï¼Œèƒ½å¤Ÿåœ¨ä¸åŒé˜¶æ®µæœ‰æ‰€æˆå°±ã€‚</p>';
            } else {
                interpretationHTML += '<p><strong>æ•´ä½“é¢ç›¸ï¼š</strong> ä¸‰åº­æ¯”ä¾‹æœ‰è¾ƒæ˜æ˜¾å·®å¼‚ï¼Œäººç”Ÿå„é˜¶æ®µè¿åŠ¿èµ·ä¼è¾ƒå¤§ï¼Œä½†å¾€å¾€èƒ½åœ¨ç‰¹å®šé¢†åŸŸæœ‰çªå‡ºè¡¨ç°ã€‚</p>';
            }
            
            interpretation.innerHTML = interpretationHTML;
        }
        
        // ç¤ºä¾‹å›¾ç‰‡åŠ è½½
        document.querySelectorAll('.sample-image').forEach(img => {
            img.addEventListener('click', function() {
                // åˆ›å»ºç¤ºä¾‹å›¾ç‰‡
                const imgElement = new Image();
                imgElement.crossOrigin = "Anonymous";
                imgElement.onload = function() {
                    // æ¸…é™¤ä¹‹å‰çš„æ ‡è®°ç‚¹
                    clearMarkers();
                    
                    // æ˜¾ç¤ºå›¾ç‰‡
                    imagePreview.src = this.src;
                    imagePreview.style.display = 'block';
                    
                    // ä¿å­˜åŸå§‹å°ºå¯¸
                    originalWidth = imgElement.width;
                    originalHeight = imgElement.height;
                    
                    // è°ƒæ•´é¢„è§ˆå¤§å°
                    const maxWidth = 600;
                    if (imgElement.width > maxWidth) {
                        const scale = maxWidth / imgElement.width;
                        imagePreview.width = maxWidth;
                        imagePreview.height = imgElement.height * scale;
                    }
                    
                    currentImage = imgElement;
                    calculateBtn.disabled = false;
                    
                    // è‡ªåŠ¨æ·»åŠ æ ‡è®°ç‚¹ï¼ˆæ¨¡æ‹Ÿç”¨æˆ·ç‚¹å‡»ï¼‰
                    setTimeout(() => {
                        const rect = imagePreview.getBoundingClientRect();
                        
                        // æ ¹æ®ç¤ºä¾‹å›¾ç‰‡ç‰¹å¾æ·»åŠ æ ‡è®°ç‚¹
                        addSimulatedPoint(rect, 0.5, 0.15);  // å‘é™…çº¿ä¸­ç‚¹
                        addSimulatedPoint(rect, 0.5, 0.35);  // çœ‰å¿ƒ
                        addSimulatedPoint(rect, 0.5, 0.58);  // é¼»ä¸‹ç‚¹
                        addSimulatedPoint(rect, 0.5, 0.85);  // ä¸‹å·´å°–
                        
                        calculateBtn.disabled = false;
                    }, 500);
                };
                imgElement.src = this.src;
            });
        });
        
        // æ·»åŠ æ¨¡æ‹Ÿæ ‡è®°ç‚¹
        function addSimulatedPoint(rect, xPercent, yPercent) {
            const x = rect.width * xPercent;
            const y = rect.height * yPercent;
            
            createMarker(x, y, points.length);
            
            points.push({
                x: (x / imagePreview.width) * originalWidth,
                y: (y / imagePreview.height) * originalHeight
            });
        }
    </script>
